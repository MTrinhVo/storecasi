<h1>Products</h1>
<% if authenticated? %>

<% else %>
<%= link_to "New Product", new_product_path, class:"btn btn-outline-primary" %>
<% end %>
<table style="width:300px;" class="table table-striped table-bordered table-hover mt-1">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to product.name, product, class:"link-underline link-underline-opacity-0 text-dark" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
