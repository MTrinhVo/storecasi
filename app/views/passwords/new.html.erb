<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<%= form_with url: passwords_path do |form| %>

<div class="container" style="max-width: 400px; margin-top: 100px;">
  <div class="card">
    <div class="card-header text-center">
    <h3>Forgot your password</h3>
    </div>
    <div class="card-body">
      <form action="/reset_password" method="POST">
          <div class="mb-3">
            <%= form.label :email, class:"form-label" %><br />
            <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", class:"form-control", placeholder: "Enter your email address", value: params[:email_address] %><br>
            </div>
          <div class="actions">
            <%= form.submit "Email reset instructions", class:"btn btn-primary w-100" %>
          </div>
      </form>
      <div class="mt-3 text-center">
        <%= link_to "Log In", new_session_path, class:"text-decoration-none"%>
      </div>
    </div>
  </div>
</div>
<% end %>
